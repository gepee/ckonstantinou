import tkinter as tk
from tkinter import filedialog
import requests  # Assuming requests for making HTTP POST requests

def select_file():
    file_path = filedialog.askopenfilename()
    file_label.config(text=file_path)

def clear_display():
    display.delete('1.0', tk.END)

def post_to_flexmeasures(asset_type, asset_number, sensor_number, starting_date, duration, unit):
    # Placeholder for posting data to FlexMeasures. Adjust with actual API endpoint and data format.
    url = "YOUR_FLEXMEASURES_API_ENDPOINT"
    data = {
        "asset_type": asset_type,
        "asset_number": asset_number,
        "sensor_number": sensor_number,
        "starting_date": starting_date,
        "duration": duration,
        "unit": unit
    }
    # Assuming JSON payload, adjust headers and data format as needed for your API
    response = requests.post(url, json=data)
    if response.status_code == 200:
        return True
    else:
        print(f"Failed to post data: {response.text}")
        return False

def add_data(asset_type):
    asset_number = asset_number_entry.get()
    sensor_number = sensor_number_entry.get()
    starting_date = starting_date_entry.get()
    duration = duration_entry.get()
    unit = unit_entry.get()
    
    if post_to_flexmeasures(asset_type, asset_number, sensor_number, starting_date, duration, unit):
        display_message(f"{asset_type} data successfully posted")
    else:
        display_message(f"Failed to post {asset_type} data")

def display_message(message):
    display.insert(tk.END, message + "\n")

